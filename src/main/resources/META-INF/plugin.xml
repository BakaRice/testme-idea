  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products   -->
  <depends>com.intellij.modules.java</depends>
  <depends>JUnit</depends>
  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <component>
      <implementation-class>com.weirddev.testme.intellij.TestMePluginRegistration</implementation-class>
    </component>
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <action id="testme.action.generators" class="com.weirddev.testme.intellij.action.TestMeGeneratorsAction"
            text="&amp;TestMe..." description="TestMe Generators" icon="/icons/TestMe.png" >
      <keyboard-shortcut first-keystroke="control shift M" keymap="$default" />
      <add-to-group group-id="GenerateGroup" relative-to-action="GenerateCopyright" anchor="after" />
      <add-to-group group-id="CodeMenu" anchor="first"/>
    </action>
